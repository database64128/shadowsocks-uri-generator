[Unit]
Description=Shadowsocks URI Generator Telegram bot service
Wants=network-online.target
After=network-online.target

[Service]
ExecStart=/usr/bin/ss-uri-gen-chatbot-telegram
ProtectSystem=strict
ProtectHome=yes
NoNewPrivileges=yes
PrivateTmp=yes
Restart=on-abnormal
RestartSec=3s

[Install]
WantedBy=multi-user.target default.target
